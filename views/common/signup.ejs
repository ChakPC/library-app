<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <!-- to make the website responsive -->

    <title>Sign Up</title>

    <link rel="stylesheet" href="/css/login-register-style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>
    <center>
        <h1>My Library</h1>
    </center>
    <div class="box">
        <h2>Sign Up</h2>

        <form method="POST">
            <div class="inputBox">
                <input type="text" value="<%=name%>" name="name" required="true">
                <label>Name</label>
            </div>
            <div class="inputBox">
                <input type="email" value="<%=email%>" name="email" required="true">
                <label>E-mail ID</label>
            </div>
            <div class="inputBox">
                <input type="text" name="address" required="true">
                <label>Address</label>
            </div>
            <div class="inputBox">
                <input type="password" name="password" required="true">
                <label>Password</label>
            </div>
            <div class="inputBox">
                <input type="password" name="repassword" required="true">
                <label>Renter Password</label>
            </div>
            <center>

                <select name="type">
                    <option value="student">Student</option>
                    <option value="Professor">Professor</option>
                    <option value="librarian">Librarian</option>
                </select>
                <div style="margin-top: 15px;" class="inputBox">
                    <text>Already a member</text>
                    <a href="<%=path%>auth/login" class="signup">Sign In here</a>
                </div>
                <div style="margin-top: 15px;" >
                    <button  type="submit" class="btn btn-success">Sign Up</button>
                </div>
                <%if(typeof error[0] != 'undefined'){%>
                    <div style="margin-top: 5px;" class="alert alert-danger" role="alert">
                        <%=error%>
                    </div>
                <%}%>
            </center>

        </form>
    </div>
</body>

</html>